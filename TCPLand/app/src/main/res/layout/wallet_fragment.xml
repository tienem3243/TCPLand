<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/trendig_green"
    tools:context=".Page.Fragments.Fragments.Wallet.Wallet">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient_color_retangle"
            android:elevation="11dp"
            android:paddingLeft="20dp"
            android:paddingTop="19dp">
            <TextView
                android:id="@+id/daily_val1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ví 1"
                android:textColor="@color/white">

            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/vi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/daily_val1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="2dp"
                    android:layout_toEndOf="@+id/currency3"
                    android:text="VND"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@id/total_val_vg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/daily_val_vg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/gradient_color_retangle"
            android:elevation="11dp"
            android:paddingLeft="20dp"
            android:paddingTop="19dp">
            <TextView
                android:id="@+id/total_val1"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="Ví 2"
                android:textColor="@color/white">

            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/vi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_val1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="2dp"
                    android:layout_toEndOf="@+id/total_val3"
                    android:text="VND"
                    android:textStyle="bold"
                    android:textColor="@color/white">

                </TextView>


            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:id="@+id/total_profit_val"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/total_val_vg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/gradient_color_retangle"
            android:elevation="11dp"
            android:paddingLeft="20dp"
            android:paddingTop="19dp">
            <TextView
                android:id="@+id/total_profit_val1"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="Ví 3"
                android:textColor="@color/white">

            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/vi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_profit_val1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white">

                </TextView>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_profit_val1"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/total_profit_val3"
                    android:text="VND"
                    android:textColor="@color/white">

                </TextView>


            </LinearLayout>





        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center">


        <RelativeLayout
            android:id="@+id/button_goLichsu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"

            android:layout_marginStart="4dp"
            android:background="@drawable/rectangle_round"
            android:elevation="11dp"
            android:orientation="horizontal"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/goLichsu"
                android:layout_marginTop="25dp"
                android:text="Lịch sử giao dịch"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/goLichsu"
                android:layout_width="48dp"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"
                android:src="@drawable/back_icon" />




        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</ScrollView>
